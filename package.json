{
  "scripts": {
    "build": "tsc",
    "prebuild": "npm run clean",
    "clean": "rm -rf ./dist",
    "copyfiles": "copyfiles src/views/*.hbs dist",
    "run": "node dist/src/server.js",
    "prod": "npm-run-all clean build copyfiles run",
    "start": "ts-node -r dotenv/config src/server.ts",
    "watch": "ts-node-dev -r dotenv/config --respawn src/server.ts",
    "test": "mocha --exit \"test/**/*.{ts,js}\""
  },
  "dependencies": {
    "express": "4.17.1",
    "hbs": "4.1.1",
    "joi": "17.3.0",
    "lodash.mapvalues": "4.6.0",
    "mongodb": "3.6.2"
  },
  "devDependencies": {
    "@types/express": "4.17.8",
    "@types/hbs": "4.0.1",
    "@types/lodash.mapvalues": "4.6.6",
    "@types/mocha": "8.0.3",
    "@types/mongodb": "3.5.32",
    "@types/node": "14.14.6",
    "@types/supertest": "2.0.10",
    "copyfiles": "2.4.0",
    "cross-env": "7.0.2",
    "dotenv": "8.2.0",
    "mocha": "8.2.1",
    "nodemon": "2.0.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "supertest": "6.0.0",
    "ts-node": "9.0.0",
    "ts-node-dev": "1.0.0",
    "typescript": "4.0.5",
    "why-is-node-running": "2.2.0"
  }
}
